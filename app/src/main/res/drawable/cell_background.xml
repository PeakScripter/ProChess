<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD" /> <!-- Shadow color -->
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- Border -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cell color -->
            <stroke android:width="1dp" android:color="#000000" /> <!-- Border color -->
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>
